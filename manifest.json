{
  "manifest_version": 2,

  "name": "EpisodeBrain",
  "description": "Stop worrying about episode numbers and continue enjoying your favourite shows!",
  "version": "1.2",
  "icons": { "128": "images/icon.png" },
  "web_accessible_resources": ["icon.png", "add.svg", "remove.svg"],
  "background": {
    "scripts": ["angular.js", "jquery-3.1.1.min.js",  "background.js"], 
    "persistent": false
  },

  "browser_action": {
    "default_icon": "images/icon.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab",
    "https://ajax.googleapis.com/",
    "storage",
    "tabs"
  ],

  "content_scripts": 
    [
        {
            "matches":["http://*/*"],
            "js":["jquery-3.1.1.min.js", "bootstrap.min.css", "angular.js", "popup.js", "domgrabber.js"],
            "run_at": "document_end"
        }
    ],
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"

}

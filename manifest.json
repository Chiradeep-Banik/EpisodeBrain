{
  "manifest_version": 2,

  "name": "EpisodeBrain",
  "description": "Stop worrying about episode numbers and continue enjoying your favourite shows!",
  "version": "1.21",
  "icons": { "128": "images/icon.png" },
  "web_accessible_resources": ["icon.png", "add.svg", "remove.svg", "bower_components/fonts/*.woff2"],
  "background": {
    "scripts": ["angular.js", "bower_components/jquery/dist/jquery.min.js",  "background.js"], 
    "persistent": false
  },

  "browser_action": {
    "default_icon": "images/icon.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab",
    "https://ajax.googleapis.com/",
    "storage",
    "tabs"
  ],

  "content_scripts": 
    [
        {
            "matches":["http://*/*"],
            "js":["bower_components/jquery/dist/jquery.min.js", "bower_components/angular/angular.min.js", "popup.js", "domgrabber.js", "bower_components/angular-xeditable/dist/js/xeditable.min.js"],
            "run_at": "document_end"
        }
    ],
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"

}

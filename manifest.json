{
  "manifest_version": 2,

  "name": "EpisodeBrain",
  "description": "This extension stores where you left off on your favourite streamed shows!",
  "version": "1.0",
  "icons": { "128": "images/icon.png" },
  "web_accessible_resources": ["icon.png"],
  "background": {
    "scripts": ["angular.js", "popup.js"], 
    "persistent": false
  },

  "browser_action": {
    "default_icon": "images/icon.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab",
    "https://ajax.googleapis.com/",
    "storage"
  ],

  "content_scripts": 
    [
        {
            "matches":["http://*/*"],
            "js":["jquery-3.1.1.min.js", "angular.js", "popup.js"],
            "run_at": "document_end"
        }
    ]
}
